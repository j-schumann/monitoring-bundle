{
    "name": "vrok/monitoring-bundle",
    "type": "library",
    "description": "Message classes to request & receive PDF files via Symfony messenger",
    "keywords": ["symfony", "messenger", "microservice", "pdf"],
    "homepage": "https://vrok.de",
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "symfony/console": "5.1.2",
        "symfony/mailer": "5.1.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer":  "2.16.4",
        "phpunit/phpunit": "^9.2.3"
    },
    "autoload": {
        "psr-4": {
            "Vrok\\MonitoringBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vrok\\MonitoringBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "php-cs-fixer fix --dry-run --diff -v",
        "cs-fix": "php-cs-fixer fix -v",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
